<style type="text/css">

.loginme{
  text-align: center;
  color: #eb3812;
  margin-top: 30px;
  margin-bottom: 10px;
}

.formstyler{
  background-color: #fafafa;
  border-radius: 8px;
  padding: 15px;
}

</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #ffffff">
  <a class="navbar-brand" style="color: #eb3812;" href="#">Itunes Gift Cards</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Help</a>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<h1 class="loginme">Confirm Details</h1>
</br>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-12 col-md-6 col-md-offset-3">
<p>
  <strong>Card type:</strong>
  <%= @bitcoin.cardamount %> dollar gift card
</p>

<p>
  <strong>Number of cards:</strong>
  <%= @bitcoin.number %>
</p>

<p>
  <strong>Payment Options:</strong>
  <%= @bitcoin.paymentoptions %>
</p>

<p>
    <% if @bitcoin.paymentoptions == "Mobile Money" %>
    <strong>Mobile Money Number:</strong>
    <%= @bitcoin.mmnumber %>
  <% end %>
</p>

<p>
<% if @bitcoin.paymentoptions == "Mobile Money" %>
    <strong>Total Amount to be received:</strong>
    GHc <%= @bitcoin.mobilemtotal %>
  <% end %>

</p>

<p>
    <% if @bitcoin.paymentoptions == "Bitcoin" %>
    <strong>Bitcoin Number:</strong>
    <%= @bitcoin.bitcoinnumber %>
  <% end %>
</p>

<p>
<% if @bitcoin.paymentoptions == "Bitcoin" %>
    <strong>Total Amount to be received:</strong>
    GHc <%= @bitcoin.bitcointotal %>
  <% end %>

</p>
  

<ul style="list-style-type: none;">
    <%= render @bitcoin.photos %>
</ul>

<%= link_to 'Confirm Transaction', confirm_bitcoin_path(@bitcoin), method: :post, :class => "btn btn-info", :style => "margin-top: 10px; margin-right: 10px;" %>

</div>
</div>
</div>